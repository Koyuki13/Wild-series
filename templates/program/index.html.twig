{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center my-5">Programme index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Affiche</th>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for program in programs %}
                <tr>
                    <td>
                        <img class="img-sm" src="{{ program.poster }}" alt="{{ program.title }}">
                    </td>
                    <td>{{ program.title }}</td>
                    <td>{{ program.summary |slice(0, 35) }}...</td>

                    <td>
                        <a class="btn btn-sm btn-dark" href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
                        <a class="btn btn-sm btn-dark" href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-lg btn-dark" href="{{ path('program_new') }}">Nouveau</a>
    </div>



{% endblock %}
