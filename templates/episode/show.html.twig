{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ episode.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ episode.title }}</td>
        </tr>
        <tr>
            <th>Number</th>
            <td>{{ episode.number }}</td>
        </tr>
        <tr>
            <th>Synopsis</th>
            <td>{{ episode.synopsis }}</td>
        </tr>
        <tr>
            <th>Poster</th>
            <td>{{ episode.poster }}</td>
        </tr>
        </tbody>
    </table>
    <div>
        {% for comment in comments %}
            <div>
                <p>{{ comment.author.email }}</p>
                <p> {{ comment.rate }}</p>
                <p> {{ comment.comment }}</p>
            </div>
        {% endfor %}
    </div>
    {% if app.user.roles[0] is same as ('ROLE_USER')%}
        {{ include('comment/_form.html.twig') }}
    {% endif %}

    <a href="{{ path('episode_index') }}">Retour aux saisons</a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
